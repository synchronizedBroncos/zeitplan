      <li class="nav-item">
        <a class="nav-link" href="#">About</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Sign Out</a>
      </li>
    </ul>
  </nav>
</div>

<div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Sign Out</a></li>
      </ul>
    </div>

    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <ul class="Sidebar_Features list-unstyled">
                <li ng-class="{active: main.active.tab =='ttr'}">
                    <a ng-click='main.active.tab="ttr"'>TTR</a>
                </li>

                <li ng-class="{active: main.active.tab == 'schedule'}">
                    <a ng-click='main.active.tab="schedule"'>SCHEDULE</a>
                </li>

                <li ng-class="{active: main.active.tab == 'logs'}">
                    <a ng-click='main.active.tab="logs"'>LOGS</a>
                </li>

                <li ng-class="{active: main.active.tab == 'pomodoro'}">
                    <a ng-click='main.active.tab="pomodoro"'>POMODORO</a>
                </li>
            </ul>
            <hr>
        </nav>
        <!-- Page Content  -->
        <div class="tab-content">
            <div ng-switch='main.active.tab'>
              <div ng-switch-when="ttr" ng-include="'views/ttr.ejs'"></div>
              <div ng-switch-when="schedule" ng-include="'views/schedule.ejs'"></div>
              <div ng-switch-when="logs" ng-include="'views/logs.ejs'"></div>
              <div ng-switch-when="pomodoro" ng-include="'views/pomodoro.ejs'"></div>
            </div>
        </div>
</div>


